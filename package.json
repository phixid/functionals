{
  "name": "subterfuge",
  "version": "0.4.6",
  "description": "Simple functional Javascript",
  "keywords": [ "functional", "javascript" ],
  "author": "Kristof Hermans <@phixid>",
  "repository": "git@github.com:phixid/subterfuge.git",

  "files": [ "dist" ],
  "main": "dist/cjs/subterfuge.js",
  "module": "dist/es/subterfuge.js",

  "scripts": {
    "build": "yarn build:cjs & yarn build:es",
    "build:cjs": "NODE_ENV=CJS rollup -c",
    "build:es": "NODE_ENV=ES rollup -c",
    "clean": "yarn clean:dist & yarn clean:dependencies",
    "clean:dependencies": "rm -rf node_modules",
    "clean:dist": "rm -rf dist",
    "coveralls": "yarn test:coverage && coveralls < coverage/lcov.info",
    "format": "prettier --write --single-quote --bracket-spacing=true --print-width=100 'src/**/*.js'",
    "lint": "eslint src/*.js",
    "prebuild": "yarn clean:dist",
    "precommit": "lint-staged && yarn test:single && yarn build",
    "prepublish": "yarn build",
    "test:coverage": "yarn test:single --coverage",
    "test:single": "jest",
    "test:watch": "jest --watchAll --verbose"
  },

  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-jest": "^21.2.0",
    "babel-preset-env": "^1.6.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.13.0",
    "eslint-plugin-import": "^2.8.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.1",
    "rollup": "^0.52.0",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-node-resolve": "^3.0.0"
  },

  "jest": {
    "bail": true,
    "testMatch": [
      "**/src/**/*.(spec|test).js",
      "**/**/__tests__/**/*.(spec|test).js"
    ]
  },

  "lint-staged": {
    "*.js": [
      "eslint",
      "prettier --write --single-quote --bracket-space=true --print-width=100",
      "git add"
    ]
  },

  "license": "MIT"
}
