{
  "name": "subterfuge",
  "version": "0.1.0",
  "description": "A functional Javascript library to use and learn from!",
  "keywords": [
    "functional",
    "javascript"
  ],
  "main": "dist/$npm_package_name.js",
  "scripts": {
    "clean": "yarn clean:dist & yarn clean:dependencies",
    "clean:dependencies": "rm -rf node_modules",
    "clean:dist": "rm -rf dist",
    "coverage": "yarn test:single --coverage",
    "prebuild": "yarn test:single & yarn clean:dist",
    "build": "rollup -c",
    "test:single": "jest",
    "test:watch": "jest --watchAll"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-jest": "^21.2.0",
    "babel-preset-env": "^1.6.1",
    "jest": "^21.2.1",
    "rollup": "^0.52.0",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-node-resolve": "^3.0.0"
  },
  "author": "Kristof Hermans <@phixid>",
  "repository": "git@github.com:phixid/subterfuge.git",
  "license": "MIT",
  "jest": {
    "bail": true,
    "verbose": true,
    "testMatch": [
      "**/src/**/*.spec.js",
      "**/**/__tests__/**/*.(spec|test).js"
    ]
  }
}
